<%= form_for @joke do |f| %>
<% if @joke.errors.any? %>
  <ul>
    <% @joke.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <%end%>
  </ul>
<%end%>
<p style="color:#121212">
  <font color="white">This is some text!</font>
  <%=f.label :topic%> <br>
  <%=f.text_field :topic, size: "50X2"%> <br>
  <br>
  <%=f.label :body%> <br>
  <%=f.text_area :body, size: "100x10"%>
  </p>
  <p>
  <%= f.submit "Save joke to your Vault"%>
</p>
<% end %>
